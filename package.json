{
  "name": "btc-script",
  "displayName": "btc-script",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["*"],
  "main": "./extension.js",
  "contributes": {
    "languages": [
        {
          "id": "bitcoinscript",
          "aliases": [
            "btc", "BitcoinScript"
          ],
          "extensions": [
            ".btc", ".bitcoinscript"
          ]
        },
        {
          "id": "rust",
          "aliases": [
            "rust", "rs"
          ],
          "extensions": [
            ".rs"
          ]
        }
    ],
    "grammars": [
      {
          "language": "rust",
          "scopeName": "source.rust",
          "path": "./syntax/rust.tmLanguage.json"
      },
      {
        "language": "bitcoinscript",
        "scopeName": "source.bitcoinscript",
        "path": "./syntax/bitcoinscript.tmLanguage.json",
        "injectTo": ["source.rust"]
      }
    ],
    "commands": []
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
